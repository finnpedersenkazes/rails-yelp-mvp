<div class="container">
  <h1 class="text-center">New Restaurant</h1>
    <%= simple_form_for @restaurant do |f| %>
      <%= f.input :name, placeholder:"Name", label: "Name" %>
      <%= f.input :address, placeholder:"Address", label: "Address" %>
      <%= f.input :phone_number, placeholder:"Phone Number", label: "Phone Number" %>
      <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"], placeholder:"Category", label: "Category" %>
      <%= f.button :submit, "Add Restaurant", class: "btn btn-primary" %>
      <%= link_to "Restaurants", restaurants_path, class: "btn btn-primary" %>
    <% end %>
</div>
